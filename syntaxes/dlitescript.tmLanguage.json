{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DLiteScript",
	"patterns": [
		{"include": "#comments"},
		{"include": "#keywords"},
		{"include": "#types"},
		{"include": "#booleans"},
		{"include": "#operators"},
		{"include": "#numbers"},
		{"include": "#strings"},
		{"include": "#function-calls"}
	],
	"repository": {
		"comments": {
			"name": "comment.line.double-slash.dlitescript",
			"match": "//.*$"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.dlitescript",
					"match": "\\b(var|const|if|else)\\b"
				},
				{
					"name": "keyword.control.loop.dlitescript",
					"match": "\\b(for|from|to)\\b"
				},
				{
					"name": "keyword.control.flow.dlitescript",
					"match": "\\b(break|continue)\\b"
				}
			]
		},
		"types": {
			"name": "support.type.builtin.dlitescript",
			"match": "\\b(string|number|bool)\\b"
		},
		"booleans": {
			"name": "constant.language.boolean.dlitescript",
			"match": "\\b(true|false)\\b"
		},
		"operators": {
			"name": "keyword.operator.dlitescript",
			"match": "(\\*\\*|==|!=|>=|<=|&&|\\|\\||[+\\-*/%=<>!])"
		},
		"numbers": {
			"name": "constant.numeric.dlitescript",
			"match": "\\b\\d+(\\.\\d+)?\\b"
		},
		"strings": {
			"name": "string.quoted.double.dlitescript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dlitescript",
					"match": "\\\\."
				},
				{
					"name": "constant.other.placeholder.dlitescript",
					"match": "%[%sg]"
				}
			]
		},
		"function-calls": {
			"name": "entity.name.function.dlitescript",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
		}
	},
	"scopeName": "source.dlitescript"
}
