{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DLiteScript",
	"patterns": [
		{"include": "#comments"},
		{"include": "#keywords"},
		{"include": "#types"},
		{"include": "#booleans"},
		{"include": "#operators"},
		{"include": "#numbers"},
		{"include": "#strings"},
		{"include": "#function-calls"},
		{"include": "#namespaced-identifiers"},
		{"include": "#import-statements"}
	],
	"repository": {
		"comments": {
			"name": "comment.line.double-slash.dlitescript",
			"match": "//.*$"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.dlitescript",
					"match": "\\b(var|const|if|else)\\b"
				},
				{
					"name": "keyword.control.loop.dlitescript",
					"match": "\\b(for|from|to)\\b"
				},
				{
					"name": "keyword.control.flow.dlitescript",
					"match": "\\b(break|continue|return)\\b"
				},
				{
					"name": "keyword.other.function.dlitescript",
					"match": "\\b(func|import)\\b"
				}
			]
		},
		"types": {
			"name": "support.type.builtin.dlitescript",
			"match": "\\b(string|number|bool|null)\\b"
		},
		"booleans": {
			"name": "constant.language.boolean.dlitescript",
			"match": "\\b(true|false)\\b"
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.arithmetic.dlitescript",
					"match": "(\\*\\*|[+\\-*/%])"
				},
				{
					"name": "keyword.operator.comparison.dlitescript",
					"match": "(==|!=|>=|<=|[<>])"
				},
				{
					"name": "keyword.operator.logical.dlitescript",
					"match": "(&&|\\|\\||!)"
				},
				{
					"name": "keyword.operator.assignment.dlitescript",
					"match": "="
				},
				{
					"name": "keyword.operator.spread.dlitescript",
					"match": "\\.\\.\\."
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.dlitescript",
			"match": "\\b\\d+(\\.\\d+)?\\b"
		},
		"strings": {
			"name": "string.quoted.double.dlitescript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dlitescript",
					"match": "\\\\."
				},
				{
					"name": "constant.other.placeholder.dlitescript",
					"match": "%[%sgvt]"
				}
			]
		},
		"function-calls": {
			"name": "entity.name.function.dlitescript",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
		},
		"namespaced-identifiers": {
			"name": "entity.name.namespace.dlitescript",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\.[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
		},
		"import-statements": {
			"patterns": [
				{
					"name": "keyword.other.import.dlitescript",
					"match": "\\bimport\\b"
				},
				{
					"name": "string.quoted.double.import.dlitescript",
					"match": "import\\s+(\"[^\"]+\")"
				}
			]
		}
	},
	"scopeName": "source.dlitescript"
}
